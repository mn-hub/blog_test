<div class="card my-2">
  <div class="card-header">
    <%= comment.user.name %>
  </div>
  <div class="card-body">
    <p>
      <%= comment.body %>
    </p>
    <% if comment.edit_by?(@current_user) %>
    <%= link_to t('comments.edit.btn'), edit_comment_path(comment), class: 'card-link' %>
    <%= link_to t('comments.destroy.btn'), comment, class: 'text-danger card-link', data: {method: :delete, confirm: t('helpers.sure')} %>
    <% end %>
  </div>
</div>
