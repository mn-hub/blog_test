<div class="card my-2">
  <div class="card-body">
    <h4 class="card-title">
      <%= post.title %>
    </h4>
    <h6 class="card-subtitle mb-2">
      <%=link_to post.user.name, post.user, class: 'text-muted' %>
    </h6>

    <p class="card-text">
      <%= post.body %>
    </p>
    <% unless current_page?(post) %>
      <%= link_to t('posts.show.btn'), post, class: 'card-link' %>
    <% end %>
    <% if post.edit_by?(@current_user) %>
      <%= link_to t('posts.edit.btn'), edit_post_path(post), class: 'card-link' %>
      <%= link_to t('posts.destroy.btn'), post, class: 'card-link text-danger', data: {method: :delete, confirm: t('helpers.sure')} %>
    <% end %>
  </div>
  <div class="card-footer text-muted">
    <%=l post.created_at, format: :long %>
  </div>

</div>
